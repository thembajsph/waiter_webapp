<div class="row center big-banner">

  <div class="center">
    <h1 class=""> WAITERS SHIFTS </h1>
 <p class="eg center">EACH NAME ACTS AS A LINK </p>
    <h3> <span class="clearWaiters center col-3" id="errorMsg"> {{messages.clear}}{{userName}}
      </span></h3>

    <div>

      <div class="row">
        <table class=" table table-bordered text-light">
          <thead>

            <tr scope="col-3">


              {{#each list}}


              <th style="background-color: {{this.color}};">

                {{this.days_bookings}}


                {{/each}}
              </th>


            </tr>

          </thead>
          <tbody>
            <tr>

              {{#each list}}

              <td scope="col">

                {{!-- names only --}}
                {{#each waiters}}

                <ul class="text-left"> 
              
                  <li><a href="/waiters/{{this.names}}">{{this.names}}</a></li>
                </ul>
                {{/each}}

              </td>

              {{/each}}

            </tr>

          </tbody>

        </table>


      </div>
      <div>

        <div class="d-inline p-2 bg-warning text-white">more waiters required</div>
        <div class="d-inline p-2 bg-success text-white"> enough waiters added</div>
        <div class="d-inline p-2 bg-danger text-white">over subscribed</div>


      </div>


    </div>

  </div>
</div>
 <button class='back' type="button" name="link"><a href="/">Home</a></button> 
<a href="/reset"> <button class="clearBtn" type="submit" name="button">clear</button> </a>

<script>

  setTimeout(function () {

    document.querySelector(".clearWaiters").innerHTML = "";

  }, 3000);

</script>